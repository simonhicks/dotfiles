  unstage = reset HEAD
  tree = log --graph --color --decorate --abbrev-commit --relative-date --pretty=\"%C(yellow)%h %C(blue)(%an)%C(reset): %s - %C(green)%cr\"
  t    = log --graph --color --decorate --abbrev-commit --relative-date --pretty=\"%C(yellow)%h %C(blue)(%an)%C(reset): %s - %C(green)%cr\"
  u = reset HEAD
  l = log
  co = checkout
  cb = checkout -b
  A = add -A .
  c = commit -ama
  pl = pull
  ps = push
  m = merge
  b = branch
  rb = rebase
  rm = remote
  s = status
  f = fetch
[push]
  default = simple
[core]
