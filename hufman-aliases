# short form cli apps
alias l='ls -lh'
alias g='git'
alias s='ssh'
alias ca='clear && '
alias gr='./gradlew'

if [ -x ~/local-scripts/brightness ]
then
  alias br='brightness'
fi

if [ `which xsel` ]
then
  alias  pb='xsel --clipboard'
fi

if [ `which kpcli` ]
then
  alias k='kpcli --kdb $HOME/Dropbox/new-passwords.kdb'
fi
