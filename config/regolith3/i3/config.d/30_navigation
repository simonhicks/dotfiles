###############################################################################
# Window and Workspace Navigation
###############################################################################

## Relative Parent
bindsym $mod+a focus parent

## Relative Child
bindsym $mod+z focus child

## Relative Window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

## Last Focused Window
bindsym $mod+semicolon exec --no-startup-id pkill -USR1 -F "${XDG_RUNTIME_DIR}/swap_focus.pid"
exec --no-startup-id i3-swap-focus

## Move Window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

## Workspaces 1-10
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

## Move Window to Workspace 1 - 10
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

## Next/Previous Workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

## Move Workspace to Relative Output
bindsym $mod+Ctrl+Shift+h move workspace to output left
bindsym $mod+Ctrl+Shift+j move workspace to output down
bindsym $mod+Ctrl+Shift+k move workspace to output up
bindsym $mod+Ctrl+Shift+l move workspace to output right

mode "Workspace Mode" {
  # Rename current workspace
  bindsym r exec --no-startup-id /home/simon/scripts/i3-rename-workspace; mode "default"

  # Send window to named workspace
  bindsym s exec --no-startup-id /home/simon/scripts/i3-send-to-workspace; mode "default"

  # Focus named workspace
  bindsym o exec --no-startup-id /home/simon/scripts/i3-workspace-selector; mode "default"

  ## Exit Workspace Mode
  bindsym Escape mode "default"
  bindsym $mod+w mode "default"
}
bindsym $mod+w mode "Workspace Mode"

###############################################################################
# Window and Workspace Shapes
###############################################################################

## Vertical/Horizontal Window splits
bindsym $mod+Shift+minus split vertical
bindsym $mod+Shift+backslash split horizontal

## Toggle container layout
bindsym $mod+t layout toggle tabbed splith splitv

## Window Fullscreen Toggle
bindsym $mod+f fullscreen toggle

## Window Floating Toggle
bindsym $mod+Shift+f floating toggle

## Tile/Float Focus Toggle
bindsym $mod+Shift+t focus mode_toggle

## Push/Pop from the 'minimized stack'
bindsym $mod+m move scratchpad
bindsym $mod+Shift+m scratchpad show; floating disable
## swap the current window for the next thing in the 'minimized stack'
bindsym $mod+Ctrl+m move scratchpad; scratchpad show; floating disable


## Exit App
bindsym $mod+q [con_id="__focused__"] kill

## Terminate App
bindsym $mod+Shift+q [con_id="__focused__"] exec --no-startup-id kill -9 $(xdotool getwindowfocus getwindowpid)
