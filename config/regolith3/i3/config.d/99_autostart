## Random other things to start

# Hide the mouse pointer if unused for a duration
exec --no-startup-id /usr/bin/unclutter -b

# Load nm-applet to provide auth dialogs for network access
exec --no-startup-id /usr/bin/nm-applet

# remap a couple of keys
exec xmodmap /home/simon/.Xmodmap

# fire an i3-nagbar if the battery gets too low
exec --no-startup-id /home/simon/scripts/battery-check

# fire an i3-nagbar every 5 minutes if there are new notifications
exec --no-startup-id /home/simon/scripts/notification-alertd

